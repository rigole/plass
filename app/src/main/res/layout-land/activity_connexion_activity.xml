<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/arr">


    <LinearLayout
        android:id="@+id/linear21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/logo"
            android:layout_marginVertical="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear21"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/email_connexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#fff"
            android:hint="Email ou numero de téléphone"
             android:inputType="textEmailAddress"
            android:textColorHint="#fff"
            android:textColor="#ffff"
            />

        <EditText
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#fff"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:textColorHint="#fff"
            android:textColor="#ffff"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="25dp"
        android:gravity="right"


        app:layout_constraintTop_toBottomOf="@id/linear22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:text="mot de passe oublié"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@id/password"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear23"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_SignIn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Connexion"
            android:background="@drawable/round_button"
            android:textColor="#0C3C87"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_submit_icons_plan"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ou"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@id/password"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp"
            android:gravity="center">

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="facebook"
                android:background="@drawable/round2"
                android:textColor="#fff"
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_fb_icons_plan_icons_plan_icons_plan"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Google"
                android:background="@drawable/round4"
                android:textColor="#F7370D"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_google_icons_icons_plan"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright Wayfinding 2019"
            android:textColor="#fff"
            android:textSize="10dp"
            android:layout_marginTop="25dp"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
</ScrollView>